<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <h2 class="panel-title">
              <%= Wallet.model_name.human(count: @wallets.count) %>
            </h2>
          </div>

          <div class="col-sm-6 text-right">
            <%= link_to t('views.add_button'), {action: :new},
                        class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      </div>

      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= Wallet.human_attribute_name :name %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @wallets.each do |wallet| %>
              <tr>
                <td>
                  <%= wallet.name %>
                </td>

                <td class="text-center" width="200">
                  <%= link_to t('views.show_button'), wallet_path(wallet) %>
                  &nbsp;
                  <%= link_to t('views.edit_button'), edit_wallet_path(wallet) %>
                  &nbsp;
                  <%= link_to t('views.delete_button'), wallet_path(wallet),
                              method: :delete, data: {confirm: t('views.destroy_confirm')},
                              class: 'text-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

