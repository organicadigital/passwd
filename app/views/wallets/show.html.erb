<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-6">
            <h2 class="panel-title">
              <%= @wallet.name %>
            </h2>
          </div>
          <div class="col-sm-6 text-right">
            <%= link_to t('views.back_button'), {action: :index},
                        class: 'btn btn-default btn-lg' %>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-2">
              <i class="glyphicon glyphicon-cog"></i>
            </div>
            <div class="col-sm-10">
              <h4><%= SecureNote.model_name.human(count: @wallet.secure_notes.count) %></h4>
              <table class="table table-striped table-hover">
                <tfoot>
                  <tr>
                    <td></td>
                    <td width="200" class="text-center">
                      <%= link_to t('views.add_secure_note_button'), new_wallet_secure_note_path(@wallet) %>
                    </td>
                  </tr>
                </tfoot>
                <tbody>
                  <% if @wallet.secure_notes.any? %>
                    <% @wallet.secure_notes.each do |s| %>
                      <tr>
                        <td><%= s.name %></td>
                        <td width="200" class="text-center">
                          <%= link_to t('views.show_button'),
                                      '#', data: {
                                            toggle: 'popover',
                                            title: s.name,
                                            trigger: 'focus',
                                            placement: 'top',
                                            content: s.note
                                          } %>

                          &nbsp;
                          <%= link_to t('views.edit_button'),
                                      edit_wallet_secure_note_path(@wallet, s) %>
                          &nbsp;

                          <%= link_to t('views.delete_button'),
                                      wallet_secure_note_path(@wallet, s),
                                      class: 'text-danger',
                                      data: {method: :delete,
                                             confirm: t('views.destroy_confirm')} %>

                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="2">
                        <div class="text-muted"><%= t('.empty_secure_notes') %></div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>